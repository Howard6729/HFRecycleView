<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <Button
        android:onClick="headfoot"
        android:text="包含头部和底部(recycleView_linear)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="foot"
        android:text="仅包含底部(recycleView_linear)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="grid"
        android:text="仅包含底部(recycleView_grid)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="gridFlow"
        android:text="仅包含底部(recycleView_gridFlow)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
